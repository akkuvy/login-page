<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3 class="text-center mt-3">Editing {{user.name}}</h1>
                <form method="POST" action="/usereditsave?_method=PUT">
                    <div class="form-group">
                        <label for="name">ID</label>
                        <input type="text" class="form-control" id="name" name="id" value="{{user.id}}" readonly>
                    </div>
                    <div class="form-group">
                        <label for="email">Email <address></address></label>
                        <input type="email" class="form-control" id="email" name="email" value="{{user.email}}"
                            required>
                    </div>
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="username" name="name" value="{{user.name}}"
                            required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="password"
                            value="{{user.password}}" required>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Save Changes</button>
                </form>
        </div>
    </div>
</div>